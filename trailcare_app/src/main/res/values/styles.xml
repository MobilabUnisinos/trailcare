<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="tvTitulo">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ff009933</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">5px</item>
    </style>

    <style name="tvTituloPq">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff009933</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">5px</item>
        <item name="android:paddingLeft">5px</item>
    </style>

    <style name="tvTexto">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:paddingLeft">5px</item>
    </style>

    <style name="editTexts">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ivRecurso">
        <item name="android:paddingLeft">5px</item>
        <item name="android:paddingRight">5px</item>
        <item name="android:paddingTop">5px</item>
        <item name="android:paddingBottom">5px</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
